<?xml version="1.0" encoding="utf-8"?>
<ExtensionManifest>
	<Version>1.0.0</Version>
	<Name>Yubikey Unblocker</Name>
	<Author>Jacob Sommerville</Author>
	<ShortDescription>Adds unblock button to unblock yubikey PIV smartcards.</ShortDescription>
	<Components>
		<ClientScriptInitializer SourceFile="Initializer.js"  MinProductVersionInclusive="5.4" />
		<WebResourcesDefinition SourceFile="Web.en-US.resx" />
	</Components>
	<Settings>
		<Setting Name="Path to yubico-piv-tool.exe" IsServerOnly="false">
			<DefaultValue>C:\Program Files (x86)\Yubico\YubiKey PIV Manager\yubico-piv-tool.exe</DefaultValue>
		</Setting>
		<Setting Name="Default PIN" IsServerOnly="false">
			<DefaultValue>1234</DefaultValue>
		</Setting>
	</Settings>
</ExtensionManifest>
